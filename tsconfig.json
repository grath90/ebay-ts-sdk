{
  "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": ["es2017"],
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "outDir": "./build",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
    },
    "include": [
      "ebay/**/*"
    ],
}